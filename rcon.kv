##:import Window kivy.core.window.Window
#:import openURL webbrowser.open

<MainScreen>:
    md_bg_color: self.theme_cls.backgroundColor
    
    MDNavigationLayout:
        ScreenManager:
            MDScreen:
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: (1,1)
                    spacing: 2
                    MDTopAppBar:
                        type: 'small'
                        size_hint_x: 1
                        MDTopAppBarLeadingButtonContainer:
                            MDActionTopAppBarButton:
                                icon: 'menu'
                                on_release: left_drawer.set_state("toggle")
                        MDTopAppBarTitle:
                            text: 'Console'
                            pos_hint: {'center_x': .5, 'center_y': .5}
                        MDTopAppBarTrailingButtonContainer:
                            MDActionTopAppBarButton:
                                icon: 'menu'
                                on_release: right_drawer.set_state("toggle")
                    MDTextField:
                        mode: app.textFieldStyle
                        id: commandInput
                        hint_text: "status"
                        multiline: False
                        write_tab: False
                        on_text_validate: root.callback_exec()
                        MDTextFieldHintText:
                            text: 'Type a command...'
                        MDTextFieldLeadingIcon:
                            icon: 'powershell'
                    TextInput:
                        id: console
                        readonly: True
                        background_color: root.theme_cls.backgroundColor
                        foreground_color: (1,1,1,1)
                        scroll_y: 0
                        text: "Try typing `clear` command.\n\n"
        MDNavigationDrawer:
            id: left_drawer
            radius: 0, dp(16), dp(16), 0
            type: 'modal'
            MDNavigationDrawerMenu:
                MDNavigationDrawerLabel:
                    text: "Wolf Pack RCON Tool"
                MDNavigationDrawerItem:
                    on_release: root.manager.current = "servers"
                    MDNavigationDrawerItemLeadingIcon:
                        icon: "server"
                    MDNavigationDrawerItemText:
                        text: "Servers"
                    MDNavigationDrawerItemTrailingText:
                        id: svCounter
                        text: "0"
                
                MDNavigationDrawerItem:
                    on_release: root.manager.current = "settings"
                    MDNavigationDrawerItemLeadingIcon:
                        icon: 'cog'
                    MDNavigationDrawerItemText:
                        text: 'Settings'
                
                MDNavigationDrawerDivider:
        MDNavigationDrawer:
            id: right_drawer
            radius: 0, dp(16), dp(16), 0
            type: 'modal'
            anchor: 'right'
            MDNavigationDrawerMenu:
                MDNavigationDrawerLabel:
                    text: "Server Options"
                MDNavigationDrawerItem:
                    on_release: root.manager.current = "mapscreen"
                    MDNavigationDrawerItemLeadingIcon:
                        icon: "map"
                    MDNavigationDrawerItemText:
                        text: "Maps"
                    MDNavigationDrawerItemTrailingText:
                        id: mapCounter
                        text: "0"
                
                MDNavigationDrawerItem:
                    #on_release: root.manager.current = "settings"
                    MDNavigationDrawerItemLeadingIcon:
                        icon: 'account-multiple'
                    MDNavigationDrawerItemText:
                        text: 'Players'
                    MDNavigationDrawerItemTrailingText:
                        id: playerCounter
                        text: "0"
                
                MDNavigationDrawerDivider:

<MapCard>
    orientation: "vertical"
    spacing: 20
    size_hint_y: None
    height: "155dp"
    radius: [15]

    MDCard:
        style: "elevated"
        ripple_effect: True
        size_hint_y: None
        height: "140dp"
        MDRelativeLayout:

<MapScreen>:
    md_bg_color: self.theme_cls.backgroundColor
    MDTopAppBar:
        type: 'small'
        size_hint_x: 1
        pos_hint: {'top': 1}
        MDTopAppBarLeadingButtonContainer:
            MDActionTopAppBarButton:
                icon: 'arrow-left'
                on_release: root.manager.current = "main"
        MDTopAppBarTitle:
            text: 'Maps'
    MDRecycleView:
        id: map_list
        viewclass: "MapCard"
        bar_width: 0
        size_hint: 1, 0.9

        RecycleGridLayout:
            cols: 2
            spacing: 50
            #padding: [25, 45, 25, 100]
            #default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint: 1, None
            height: self.minimum_height

<SettingsScreen>:
    md_bg_color: self.theme_cls.backgroundColor
    
    MDNavigationLayout:
        ScreenManager:
            MDScreen:
                ScrollView:
                    MDList:
                        MDTopAppBar:
                            type: 'small'
                            size_hint_x: .8
                            MDTopAppBarLeadingButtonContainer:
                                MDActionTopAppBarButton:
                                    icon: 'arrow-left'
                                    on_release: root.manager.current = "main"
                            MDTopAppBarTitle:
                                text: 'Settings'
                                pos_hint: {'center_x': .1, 'center_y': .5}
                        MDListItem:
                            on_release: root.manager.current = "generalsettings"
                            MDListItemLeadingIcon:
                                icon: 'application-cog'
                            MDListItemSupportingText:
                                text: 'General'
                            MDListItemTrailingIcon:
                                icon: 'chevron-right'
                        MDListItem:
                            on_release: root.manager.current = "appearance"
                            MDListItemLeadingIcon:
                                icon: 'eye'
                            MDListItemSupportingText:
                                text: 'Appearance'
                            MDListItemTrailingIcon:
                                icon: 'chevron-right'
                        MDListItem:
                            on_release: root.manager.current = "about"
                            MDListItemLeadingIcon:
                                icon: 'information'
                            MDListItemSupportingText:
                                text: 'About'
                            MDListItemTrailingIcon:
                                icon: 'chevron-right'
                        MDListItem:
                            on_release: root.purgeLogs()
                            MDListItemLeadingIcon:
                                icon: 'broom'
                            MDListItemSupportingText:
                                id: purgeText
                                text: 'Purge Logs (0)'

<GeneralSettings>:
    md_bg_color: self.theme_cls.backgroundColor
    ScrollView:
        MDList:
            MDTopAppBar:
                type: 'small'
                size_hint_x: 1
                MDTopAppBarLeadingButtonContainer:
                    MDActionTopAppBarButton:
                        icon: 'arrow-left'
                        on_release: root.manager.current = "settings"
                    MDTopAppBarTitle:
                        text: 'General Settings'
            MDListItem:
                MDListItemLeadingIcon:
                    icon: 'timer-refresh'
                MDListItemHeadlineText:
                    text: 'Server Status Update Interval'
                MDListItemSupportingText:
                    text: 'Time to wait before updating maps and players. Also updates when you run `status` command.'

<AppearanceSettings>:
    md_bg_color: self.theme_cls.backgroundColor
    ScrollView:
        MDList:
            MDTopAppBar:
                type: 'small'
                size_hint_x: 1
                MDTopAppBarLeadingButtonContainer:
                    MDActionTopAppBarButton:
                        icon: 'arrow-left'
                        on_release: root.manager.current = "settings"
                MDTopAppBarTitle:
                    text: 'Appearance Settings'
            MDListItem:
                on_release: app.toggleDarkMode()
                MDListItemLeadingIcon:
                    icon: 'theme-light-dark'
                MDListItemSupportingText:
                    text: "Switch Theme Style"
            MDListItem:
                id: colorMenuButton1
                on_release: root.colorMenu(1)
                MDListItemLeadingIcon:
                    icon: 'format-color-fill'
                MDListItemSupportingText:
                    text: 'Choose Theme Color (Set 1)'
            MDListItem:
                id: colorMenuButton2
                on_release: root.colorMenu(2)
                MDListItemLeadingIcon:
                    icon: 'format-color-fill'
                MDListItemSupportingText:
                    text: 'Choose Theme Color (Set 2)'
            MDListItem:
                id: colorMenuButton3
                on_release: root.colorMenu(3)
                MDListItemLeadingIcon:
                    icon: 'format-color-fill'
                MDListItemSupportingText:
                    text: 'Choose Theme Color (Set 3)'
            MDListItem:
                id: colorMenuButton4
                on_release: root.colorMenu(4)
                MDListItemLeadingIcon:
                    icon: 'format-color-fill'
                MDListItemSupportingText:
                    text: 'Choose Theme Color (Set 4)'
            MDListItem:
                on_release: root.manager.current = "themepreview"
                MDListItemLeadingIcon:
                    icon: 'palette'
                MDListItemSupportingText:
                    text: 'Theme Color Previewer'
            MDListItem:
                id: fStyleMenuButton
                on_release: root.tFieldStyleMenu()
                MDListItemLeadingIcon:
                    icon: 'form-textbox'
                MDListItemSupportingText:
                    text: 'Text Field Style (Restart Required)'
            MDListItem:
                on_release: root.resetTheme()
                MDListItemLeadingIcon:
                    icon: 'restore'
                MDListItemSupportingText:
                    text: 'Reset Appearance Settings'

<ColorCard>
    orientation: "vertical"
    spacing: 20
    size_hint_y: None
    height: "60dp"
    radius: [15]

    MDLabel:
        text: root.text
        color: "grey"

    MDCard:
        theme_bg_color: "Custom"
        md_bg_color: root.bg_color
        size_hint_y: None
        height: "45dp"

<ThemeColorPreview>:
    md_bg_color: self.theme_cls.backgroundColor
    #md_bg_color: app.theme_cls.surfaceContainerLowColor
    MDTopAppBar:
        type: 'small'
        size_hint_x: 1
        pos_hint: {'top': 1}
        MDTopAppBarLeadingButtonContainer:
            MDActionTopAppBarButton:
                icon: 'arrow-left'
                on_release: root.manager.current = "appearance"
        MDTopAppBarTitle:
            text: 'Theme Colors Preview'
            pos_hint: {'center_x': .1, 'center_y': .5}
    MDRecycleView:
        id: card_list
        viewclass: "ColorCard"
        bar_width: 0
        size_hint: 1, 0.9

        RecycleGridLayout:
            cols: 2
            spacing: 50
            padding: [25, 45, 25, 100]
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint: 1, None
            height: self.minimum_height

<ServerScreen>:
    md_bg_color: self.theme_cls.backgroundColor
    ScrollView:
        MDList:
            id: serverList
            MDTopAppBar:
                type: 'small'
                size_hint_x: .8
                MDTopAppBarLeadingButtonContainer:
                    MDActionTopAppBarButton:
                        icon: 'arrow-left'
                        on_release: root.manager.current = "main"
                MDTopAppBarTitle:
                    text: 'Servers'
                    pos_hint: {'center_x': .1, 'center_y': .5}
            MDListItem:
                on_release: root.manager.current = "addserver"
                MDListItemLeadingIcon:
                    icon: 'server-plus'
                MDListItemSupportingText:
                    text: 'Add Server'

<AddServerScreen>:
    md_bg_color: self.theme_cls.backgroundColor
    ScrollView:
        MDList:
            spacing: 12
            MDTopAppBar:
                type: 'small'
                size_hint_x: .8
                MDTopAppBarLeadingButtonContainer:
                    MDActionTopAppBarButton:
                        icon: 'arrow-left'
                        on_release: root.manager.current = "servers"
                MDTopAppBarTitle:
                    text: 'Add Server'
                    pos_hint: {'center_x': .1, 'center_y': .5}
            MDTextField:
                mode: app.textFieldStyle
                id: newSrvName
                multiline: False
                write_tab: False
                on_text_validate: newSrvIP.focused = True
                MDTextFieldHintText:
                    text: 'Name'
                MDTextFieldLeadingIcon:
                    icon: 'format-color-text'
            MDTextField:
                mode: app.textFieldStyle
                id: newSrvIP
                multiline: False
                write_tab: False
                on_text_validate: newSrvPass.focused = True
                MDTextFieldHintText:
                    text: 'IP:Port (e.g. 1.1.1.1:28960)'
                MDTextFieldLeadingIcon:
                    icon: 'format-color-text'
            MDTextField:
                mode: app.textFieldStyle
                id: newSrvPass
                multiline: False
                write_tab: False
                on_text_validate: root.saveNewServer()
                MDTextFieldHintText:
                    text: 'RCON Password'
                MDTextFieldLeadingIcon:
                    icon: 'lastpass'
            MDButton:
                id: addSVbutton
                pos_hint: {'center_x': .5, 'center_y': .5}
                style: 'filled'
                theme_width: "Custom"
                height: "56dp"
                width: root.width
                on_release: root.saveNewServer()
                MDButtonText:
                    text: 'Add'
                    pos_hint: {'center_x': .5, 'center_y': .5}

<AboutScreen>:
    md_bg_color: self.theme_cls.backgroundColor
    ScrollView:
        MDList:
            MDTopAppBar:
                type: 'small'
                size_hint_x: .8
                MDTopAppBarLeadingButtonContainer:
                    MDActionTopAppBarButton:
                        icon: 'arrow-left'
                        on_release: root.manager.current = "settings"
                MDTopAppBarTitle:
                    text: 'About'
                    pos_hint: {'center_x': .1, 'center_y': .5}
            MDListItem:
                ripple_effect: False
                MDListItemSupportingText:
                    multiline: True
                    text: 'RCON tool for Call of Duty Â® (2003) and some other similar games. Made using KivyMD UI toolkit for Python.'
                
            MDListItem:
                ripple_effect: False
                MDLabel:
                    text: "Discord Server"
                MDCard:
                    style: 'elevated'
                    on_release: openURL("https://discord.com/invite/GDMDTJXaFk")
                    MDRelativeLayout:
                        MDIcon:
                            icon: 'arrow-top-right'
                            pos_hint: {'top': .9, 'right': .95}
                        FitImage:
                            id: WolfPackLogo
                            size_hint: None, None
                            size: "64dp", "64dp"
                            pos_hint: {'center_x': .5, "center_y": .5}
            MDListItem:
                ripple_effect: False
                MDLabel:
                    text: 'Source Code'
                MDCard:
                    style: 'elevated'
                    on_release: openURL("https://github.com/Wolf-Pack-Clan/wfp-rcontool")
                    MDRelativeLayout:
                        MDIcon:
                            icon: 'arrow-top-right'
                            pos_hint: {'top': .9, 'right': .95}
                        FitImage:
                            id: GHLogo
                            size_hint: None, None
                            size: "64dp", "64dp"
                            pos_hint: {'center_x': .5, "center_y": .5}
            MDListItem:
                ripple_effect: False
                MDLabel:
                    text: 'KivyMD'
                MDCard:
                    style: 'elevated'
                    on_release: openURL("https://github.com/kivymd/KivyMD")
                    MDRelativeLayout:
                        MDIcon:
                            icon: 'arrow-top-right'
                            pos_hint: {'top': .9, 'right': .95}
                        FitImage:
                            id: kivyMDLogo
                            size_hint: None, None
                            size: "64dp", "64dp"
                            pos_hint: {'center_x': .5, "center_y": .5}